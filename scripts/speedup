#! /usr/bin/env coffee

{ execSync: e } = require 'child_process'
{ EXECUTABLES_DIR, INPUTS } = require './common'

process.argv = process.argv[2..]

input = INPUTS[0]

if process.argv[0]? and process.argv[0] in ['0', '1', '2', '3']
    input = INPUTS[process.argv[0]]
    process.argv = process.argv[1..]

try
    e "./compile speedup", { stdio: 'inherit' }
catch err
    process.exit(1)

program =
    if process.argv[0]? and process.argv[0][0] isnt '-'
        aux = process.argv[0]
        process.argv = process.argv[1...]
        aux
    else "ftdock"

forward = process.argv.join(" ")

process.chdir(EXECUTABLES_DIR)

try
    e "sudo optim speedup -H -I #{program}.3 -a :#{input}", { stdio: 'inherit' }
catch err
